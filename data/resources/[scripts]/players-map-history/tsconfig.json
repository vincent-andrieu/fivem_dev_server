{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "declaration": false,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@shared/core": ["../../../../shared/core/build"],
            "@shared/server": ["../../../../shared/server/build"]
        }
    }
}
